<h1>New Municipality</h1>

<% if @municipality.errors.any? %>
  <div id="errors">
    <h2>
      <%= pluralize(@municipality.errors.count, "error") %>
      prohibited this municipalit from being saved
    </h2>
    <ul>
    <% @municipality.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :municipality, url: municipalities_path do |f| %>

  <p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  </p>

  <p>
  <%= f.label :official_id %><br>
  <%= f.text_field :official_id %>
  </p>

  <p>
  <%= f.label :header_url %><br>
  <%= f.text_field :header_url %>
  </p>

  <%= f.submit %>
<% end %>

<%= link_to 'Home', root_path %>
